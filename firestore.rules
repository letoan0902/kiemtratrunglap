rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // VERY PERMISSIVE RULES FOR DEBUGGING - ALLOW ALL OPERATIONS
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Users collection - allow all operations
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Fields collection - allow all operations  
    match /fields/{fieldId} {
      allow read, write: if true;
    }
    
    // Security logs - allow all operations
    match /security_logs/{logId} {
      allow read, write: if true;
    }
  }
} 